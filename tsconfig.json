{
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "target": "ESNext",
        "outDir": "./dist",
        "baseUrl": "./src",
        "rootDir": "./src",
        "types": ["node"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}